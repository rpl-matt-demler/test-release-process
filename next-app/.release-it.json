{
  "git": {
    "commitMessage": "chore: release v${version}\n\nskip-checks:true"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {}
        ]
      },
      "infile": "docs/CHANGELOG.md",
      "header": "# Changelog"
    }
  }
}